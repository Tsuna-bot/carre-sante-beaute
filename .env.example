# Configuration globale du projet

# Base de données MySQL
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=prestashop
MYSQL_USER=prestashop_user
MYSQL_PASSWORD=your_secure_db_password

# Configuration Admin PrestaShop
ADMIN_EMAIL=your_email@example.com
ADMIN_PASSWORD=your_secure_admin_password

# Configuration PrestaShop
PRESTASHOP_DOMAIN=localhost:8080
# Pour production: PRESTASHOP_DOMAIN=your-domain.com

# Configuration Frontend
NEXT_PUBLIC_PRESTASHOP_URL=http://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_SITE_NAME=Mon E-commerce
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# API Key PrestaShop (à configurer après installation)
NEXT_PUBLIC_API_KEY=your_prestashop_api_key_here

# Configuration pour production
# NEXT_PUBLIC_PRESTASHOP_URL=https://your-domain.com
# NEXT_PUBLIC_API_URL=https://your-domain.com/api
# NEXT_PUBLIC_SITE_URL=https://your-domain.com